{
    "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
    "applicationId": "edu.umich.its.hostsmanager",
    "version": "2.0.0",
    "defaultMode": "window",
    "port": 0,
    "documentRoot": "/resources/",
    "url": "/",
    "enableServer": true,
    "enableNativeAPI": true,
    "tokenSecurity": "one-time",
    "logging": {
      "enabled": true,
      "writeToLogFile": true
    },
    "nativeAllowList": [
      "app.*",
      "os.*",
      "filesystem.*",
      "storage.*",
  
      "window.*",
      "debug.log"
    ],
    "modes": {
      "window": {
        "title": "hostsmanager",
        "width": 800,
        "height": 500,
        "minWidth": 400,
        "minHeight": 200,
        "fullScreen": false,
        "alwaysOnTop": false,
        "icon": "/resources/icons/icon.icns",
        "enableInspector": true,
        "borderless": false,
        "maximize": false,
        "hidden": false,
        "resizable": true,
        "exitProcessOnClose": false,
        "center": true
      },
      "browser": {
        "nativeBlockList": [
          "filesystem.*"
        ]
      },
      "cloud": {
        "url": "/resources/#cloud",
        "nativeAllowList": [
          "app.*"
        ]
      },
      "chrome": {
        "width": 800,
        "height": 500,
        "args": "--user-agent=\"Neutralinojs chrome mode\"",
        "nativeBlockList": [
          "filesystem.*",
          "os.*"
        ]
      }
    },
    "cli": {
      "binaryName": "hostsmanager",
      "resourcesPath": "/resources/",
      "extensionsPath": "/extensions/",
      "clientLibrary": "/resources/js/neutralino.js",
      "binaryVersion": "4.14.1",
      "clientVersion": "3.12.0"
    }
  }